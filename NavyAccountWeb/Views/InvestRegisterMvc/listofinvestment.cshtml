            @TempData["message"]
            <div class="card-body">


                @using (Html.BeginForm("listofinvestment", "InvestRegisterMvc", FormMethod.Post))
                {
                    <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <input type="date" name="startdate" id="period" class="form-control" placeholder="Start Date" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <input type="date" name="enddate" id="endperiod" class="form-control" placeholder="End Date" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="submit" name="Submit" id="submit" class="btn btn-primary" value="View" />
                            </div>

                        </div>

                    </div>
                }
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Investment Type</th>
                        <th>Stock Name</th>
                        <th>Transaction Type</th>
                        <th>Issuance Bank</th>
                        <th>Company</th>
                        <th>Amount</th>
                        <th>Unit</th>
                        <th>Date</th>

                    </tr>
                    @if (Model != null)
                    {
                        @foreach (var a in Model)
                        {
                            <tr>
                                <td>@a.InvestmentType</td>
                                <td>@a.StockName</td>
                                <td>@a.TransactionType</td>
                                <td>@a.issuancebank </td>
                                <td>@a.company</td>
                                <td>@a.Amount</td>
                                <td>@a.unit</td>
                                <td>@a.Date</td>

                            </tr>
                        }
                    }
                </table>



            </div>



        </div>
    </div>
</div>
