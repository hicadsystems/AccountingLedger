@model IEnumerable<NavyAccountCore.Models.InvestmentView>
@{
    ViewData["Title"] = "CapitalMarket";
}

<div class="header">
    <h1 class="header-title">
        Capital Market
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="Home/Index">Main</a></li>
            <li class="breadcrumb-item active" aria-current="page">Current Capital Market List</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title"></h5>
            </div>
            <div class="row">
            <div class="col-md-2 mt-3">
                <form asp-action="Export" method="post" asp-controller="InvestRegisterMvc">
                    <input type="submit" class="btn btn-primary" value="Excel" />

                </form>
            </div>

            <div class="col-md-2 mt-3">
                    <form asp-action="InvestmentCapital" method="get" asp-controller="InvestRegisterMvc">
                    <i class="fa fa-download" aria-hidden="true"><input type="submit" class="btn btn-primary" value="PDF" /></i>
                </form>
            </div>
            </div>
