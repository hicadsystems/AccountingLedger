@model IEnumerable<NavyAccountCore.Models.ContrDiscVM>
@{
    ViewData["Title"] = "Index";
}

<div class="header">
    <h1 class="header-title">
        Contribution
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="Home/Index">Main</a></li>
            <li class="breadcrumb-item active" aria-current="page">Generate Contribution</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Contribution Generated</h5>
            </div>

            @TempData["message"]
            <div class="card-body">

                <div class="row">

                    @*<div class="col-md-4">
                        @using (Html.BeginForm("LoanrepaymentPost", "LoanDisc", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="Generate Repayment" />
                            </div>
                        }
                    </div>*@
                    <div class="col-3">
                        <button class='btn btn-primary btn-block' id="add-edit" data-toggle="modal" data-target="#userModal">
                            <i class="fa fa-plus"></i> Add
                        </button>
                    </div>

                    @using (Html.BeginForm("printloandisc", "ContrDisc", FormMethod.Get))
                    {
                        <div class="col-4">
                            <div class="form-group">
                                <input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="Print" />
                            </div>

                        </div>

                    }

                </div>
                @if (Model != null && Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Account</th>
                            <th>Name</th>
                            <th>Amount</th>
                            @*<th>Interest</th>
                            <th>Loan Pay</th>*@
                            <th></th>
                        </tr>

                        @foreach (var j in Model)
                        {
                            <tr>
                                <td>@j.contract</td>
                                <td>@j.personname</td>
                                <td>@j.amountpay</td>
                                @*<td>@j.interest</td>
                                <td>@j.loanpay</td>*@



                                <td>
                                    <a class="btn btn-danger" asp-action="DeleteConfirmed" asp-controller="ContrDisc" asp-route-id="@j.Id">Delete</a>

                                </td>
                            </tr>
                        }

                    </table>

                }

            </div>



        </div>
    </div>
</div>
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="vLabel" aria-hidden="true"
     data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">Add User</h5>
                <button type="button" class="close dismiss-modal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <create-loan-disc-component></create-loan-disc-component>

            </div>
        </div>
    </div>
</div>
