@model IEnumerable<NavyAccountCore.Models.ContrDiscVM>
@{
    ViewData["Title"] = "Index";
}

<div class="header">
    <h1 class="header-title">
        Loan Variance
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="Home/Index">Main</a></li>
            <li class="breadcrumb-item active" aria-current="page">Generate Contribution Variance</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Contribution Variance</h5>
            </div>


            <div class="card-body">
                <div class="row">

                    @using (Html.BeginForm("printloandiscVariance", "ContrDisc", FormMethod.Get))
                    {
                        <div class="col-4">
                            <div class="form-group">
                                <input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="Print" />
                            </div>

                        </div>

                    }
                </div>
                @if (Model != null && Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Account</th>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Previous Pay</th>
                            <th>Difference</th>

                            <th></th>
                        </tr>

                        @foreach (var j in Model)
                        {
                            <tr>
                                <td>@j.contract</td>
                                <td>@j.personname</td>
                                <td>@j.amountpay</td>
                                <td>@j.prvamt</td>
                                <td>@j.amtvar</td>

                            </tr>
                        }

                    </table>

                }

            </div>



        </div>
    </div>
</div>
