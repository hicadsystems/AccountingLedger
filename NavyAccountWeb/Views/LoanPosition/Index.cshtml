@model NavyAccountWeb.ViewModels.LoanPositionViewModel


@{
    ViewData["Title"] = "Index";
}

<div class="header">
    <h1 class="header-title">
      Loan
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="Home/Index">Main</a></li>
            <li class="breadcrumb-item active" aria-current="page">Loan position Report</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title"></h5>
            </div>


            <div class="card-body">



                @using (Html.BeginForm("generate","LoanPosition", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()

                    <div class="row" style="margin-bottom:20px;">

                        @Html.HiddenFor(x=>x.fundcode)
                        
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(x => x.mainacct, "Loan Account")
                                @Html.DropDownListFor(x => x.mainacct, new SelectList(Model.getMainAct, "code", "desc"), " ", new { @class = "form-control" })
                            </div>
                        </div>



                        <div class="col-md-1" style="position:relative;top:25px;">
                            <div class="form-group">
                                <input type="submit" class="btn btn-lg btn-primary" value="Generate" />
                            </div>

                        </div>
                    </div>

                }

            </div>



        </div>
    </div>
</div>
