@model IEnumerable<NavyAccountCore.Models.LedgersView2>

    @{
    Layout = null;

    decimal? sum = 0M;
    int count = 0;
    decimal? income = 0;
    decimal? expenses = 0M;
    }

    <!DOCTYPE html>

    <html>
    <body>
        <h2 style="text-align:center">NIGERIAN NAVY DIRECTORATE OF NON-PUBLIC FUND</h2>
        <h2 style="text-align:center">NAVIP, DEPENDANT FUND AND WELFARE LOAN PORTFOLIOS</h2>

        <h3>surplus/deficit report </h3>

        <span style="float:right;position:relative;top:-25px;"><b>Produced on:</b>@DateTime.Now</span>

        <table border="2" cellpadding="2" cellspacing="0" width="85%">

            <tr>
                <th>Description</th>
                <th>Amount</th>
            </tr>


            @foreach (var a in Model)
            {


                if (a.acctcode.StartsWith("4"))
                {
                    income += a.Amount;
                    <tr>
                        <td>@a.description</td>
                        <td style="text-align:right;">@a.Amount</td>
                    </tr>
                }
                else
                {
                    expenses += a.Amount;
                    <tr>
                        <td>@a.description</td>
                        <td style="text-align:right;">@a.Amount</td>
                    </tr>

                }



            }

            @*<tr>
                <td class="font-weight-bold">Income</td>
                <td style="text-align:right;">@(income )</td>
            </tr>*@

            @*<tr>
                <td>Expenses</td>
                <td style="text-align:right;">@(expenses)</td>
            </tr>*@

            <tr>
                <td>(SURPLUS) / DEFICIT</td>
                <td style="text-align:right;">@(income + expenses)</td>
            </tr>


        </table>

    </body>
</html>
