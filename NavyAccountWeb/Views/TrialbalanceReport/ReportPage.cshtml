@model NavyAccountWeb.ViewModels.ReportViewModel
@{
    Layout = null;

}
<!DOCTYPE html>
<html>
<body>
    <h6 style="text-align:center">RETRICTED</h6>
    <h2 style="text-align:center">NIGERIAN NAVY DIRECTORATE OF NON-PUBLIC FUND</h2>
    <h2 style="text-align:center">NAVIP, DEPENDANT FUND, CAR REFURBISHING LOAN AND WELFARE LOAN PORTFOLIOS</h2>

    <h3>@Model.HeaderVariable</h3>
    <span>@Model.month  @Model.year</span>
    <span style="float:right;position:relative;top:-25px;"><b>Produced on:</b>@DateTime.Now</span>


    <table border="2" cellpadding="2" cellspacing="0" width="100%">

        <tr>
            <th>Code</th>
            <th>Description</th>
            <th>Debit Balance</th>
            <th>Credit Balance</th>

        </tr>
        @foreach (var a in Model.getList)
        {
            <tr>
                <td> @a.code </td>
                <td> @a.description </td>
                <td> @string.Format("{0:n}", Math.Round(a.debit, 2)) </td>
                <td> @string.Format("{0:n}", Math.Round(a.credit, 2)) </td>

            </tr>
        }
    </table>
    <br />
    Total <span style="position:relative;left:550px;">
        @Math.Round(Model.TotalDebit, 2)
    </span>
    <span style="position:relative;left:700px;">@Math.Round(Model.TotalCredit, 2)</span>
    <h6 style="text-align:center">RETRICTED</h6>
</body>
</html>