@model NavyAccountCore.Models.ContrDiscUpload
<div class="header">
    <h1 class="header-title">
        Loan Disc
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="Home/Index">Main</a></li>
            <li class="breadcrumb-item active" aria-current="page">Loan Repayment Upload</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Loan Repayment Upload</h5>
            </div>

            @TempData["message2"]
            <div class="card-body">

                <a href="~/uploads/loanDisc.xlsx">Download Sample </a>
                @using (Html.BeginForm("loanDiscUpload", "LoanDisc", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
            <div class="row">

                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(x => x.loanacct, "Loan Type")
                        @Html.DropDownListFor(x => x.loanacct, new SelectList(Model.getloan, "Code", "Description"), " ", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Period</label>
                        @Html.EditorFor(model => model.processingperiod, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly"} })

                    </div>
                </div>
            </div>
            <div class="row">
                    <div class="form-group">
                        <input type="file" name="formFile" class="form-control" required />
                    </div>
              </div>
              <div class="row">
                    <div class="form-group">
                        <input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="Upload" />
                    </div>
              </div>
                }

            </div>



        </div>
    </div>
</div>
